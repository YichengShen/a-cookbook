&lt;/tr&gt;
&lt;tr&gt;
&lt;td align=&quot;left&quot;&gt;姜&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;3 片&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;&lt;/td&gt;
&lt;/tr&gt;
&lt;tr&gt;
&lt;td align=&quot;left&quot;&gt;料酒&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;少量&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;&lt;/td&gt;
&lt;/tr&gt;
&lt;tr&gt;
&lt;td align=&quot;left&quot;&gt;酱油&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;少量&lt;/td&gt;
&lt;td align=&quot;left&quot;&gt;&lt;/td&gt;
&lt;/tr&gt;
&lt;tr&gt;
&lt;td align=&quot;left&quot;&gt;冰糖&lt;/td&gt;
